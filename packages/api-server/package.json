{
	"name": "rita-api-server",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "dotenv -e ../../.env -- tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"type-check": "tsc --noEmit",
		"lint": "biome lint . --diagnostic-level=warn --error-on-warnings",
		"lint:fix": "biome lint --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"migrate": "dotenv -e ../../.env -- tsx src/database/migrate.ts && pnpm run db:codegen",
		"test:auth": "dotenv -e ../../.env -- tsx src/scripts/test-auth.ts",
		"tail-logs": "dotenv -e ../../.env -- tsx src/scripts/tail-logs.ts",
		"db:codegen": "dotenv -e ../../.env -- kysely-codegen --out-file src/types/database.ts --dialect postgres",
		"docs:generate": "LOG_LEVEL=silent DATABASE_URL=postgresql://x:x@localhost/x tsx scripts/generate-openapi.ts && biome format --write openapi.json",
		"docs:validate": "LOG_LEVEL=silent DATABASE_URL=postgresql://x:x@localhost/x tsx scripts/validate-openapi.ts"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "^8.4.0",
		"@types/multer": "2.0.0",
		"@types/pino-http": "5.8.4",
		"amqplib": "0.10.9",
		"axios": "1.12.2",
		"cors": "2.8.5",
		"dotenv": "17.2.2",
		"express": "4.21.2",
		"ioredis": "5.8.2",
		"jose": "6.1.0",
		"kysely": "0.28.10",
		"lru-cache": "11.2.4",
		"multer": "2.0.2",
		"openapi3-ts": "^4.5.0",
		"pg": "8.11.0",
		"pino": "9.14.0",
		"pino-http": "10.5.0",
		"pino-pretty": "13.1.1",
		"pino-roll": "3.1.0",
		"swagger-ui-express": "^5.0.1",
		"zod": "4.1.11"
	},
	"devDependencies": {
		"@apidevtools/swagger-parser": "^12.1.0",
		"@biomejs/biome": "2.2.4",
		"@types/amqplib": "0.10.7",
		"@types/cors": "2.8.0",
		"@types/express": "4.17.0",
		"@types/express-serve-static-core": "5.0.0",
		"@types/node": "22.12.0",
		"@types/pg": "8.11.0",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "^4.1.8",
		"@vitest/coverage-v8": "4.0.9",
		"dotenv-cli": "10.0.0",
		"kysely-codegen": "0.19.0",
		"supertest": "7.1.4",
		"tsx": "4.20.6",
		"typescript": "5.2.2",
		"vitest": "4.0.9"
	}
}
